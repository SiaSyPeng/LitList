<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:name="com.wabalub.cs65.litlist.RankingFragment"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:layout_width="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_margin="10dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:text="@string/playlist"
            android:layout_width="0dp"
            android:textSize="20sp"
            android:textColor="@color/colorPrimary"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:layout_height="wrap_content" />
        <TextView
            android:text="@string/creator"
            android:layout_width="0dp"
            android:textSize="20sp"
            android:textColor="@color/cardview_dark_background"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:layout_height="wrap_content" />
        <TextView
            android:text="@string/listeners"
            android:layout_width="0dp"
            android:layout_margin="10dp"
            android:textSize="20sp"
            android:textColor="@color/colorPrimary"
            android:layout_weight="1"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_margin="10dp"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/playlist_ranking"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        tools:context="com.wabalub.cs65.litlist.RankingFragment"
        tools:listitem="@layout/fragment_playlist_item" />

</LinearLayout>